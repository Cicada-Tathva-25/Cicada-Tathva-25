<style>
    body {
        background-color: #242424;
        font-family: 'Exo', sans-serif;
        color: #00cdaf;
        margin: 0;
        overflow: hidden;
        position: relative;
        transition: background 1s ease-in-out;
    }

    .content {
        display: flex;
        justify-content: center;
        align-items: center;
        height: calc(100vh - 60px);
        position: relative;
    }

    /* Neon Card (Main Box) */
    .card {
        width: 450px;
        background-color: #141414;
        border: 1px solid #00cdaf;
        box-shadow: 0 0 10px #00cdaf;
        color: #00cdaf;
        padding: 20px;
        border-radius: 8px;
        text-align: center;
        z-index: 2;
    }

    h1, h2 {
        margin: 0;
        color: #00cdaf;
    }

    h1 {
        font-size: 2rem;
        margin-bottom: 10px;
    }

    h2 {
        font-size: 1.3rem;
        margin-bottom: 20px;
    }

    p {
        color: #00cdaf;
        font-size: 1rem;
        margin-bottom: 20px;
    }

    /* Buttons */
    .button-85 {
        background-color: #00cdaf;
        color: #141414;
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: none;
        font-weight: bold;
        font-size: 1rem;
        cursor: not-allowed;
        transition: all 0.3s ease;
        box-shadow: 0 0 10px #00cdaf;
        z-index: 2;
        opacity: 0.7;
    }

    .button-85:hover {
        background-color: #00b397;
        box-shadow: 0 0 15px #00cdaf;
    }

    .overlay {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        z-index: 2;
    }

    .highlight {
        animation: pulse 1.2s infinite alternate;
    }

    @keyframes pulse {
        from { box-shadow: 0 0 10px #00cdaf; }
        to { box-shadow: 0 0 25px #00ffcc; }
    }

    .bg-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url("cicada.jpg");
        background-size: cover;
        background-position: center;
        opacity: 0;
        transition: opacity 1.2s ease-in-out;
        z-index: 1;
    }

    .bg-image.visible {
        opacity: 1;
        filter: brightness(0.7);
        animation: bgGlow 4s infinite alternate;
    }

    @keyframes bgGlow {
        from { filter: brightness(0.7) blur(0px); }
        to { filter: brightness(1) blur(1px); }
    }

    #status-message {
        margin-top: 20px;
        color: #00cdaf;
        font-weight: 600;
        text-align: center;
        z-index: 2;
    }

    .error-text {
        color: red;
        font-weight: bold;
        margin-bottom: 15px;
    }
</style>

<div class="content">
    <!-- Background image -->
    <div class="bg-image"></div>

    <div class="overlay">
        <!-- Main Game Box -->
        <div class="card" id="mainBox">
            <h1>PayToGo</h1>
            <h2>Unlock the Secret</h2>
            <p>A payment hides the path forward. Inspect carefully... clues lie beneath.</p>

            <% if (error) { %>
                <p class="error-text"><%= error %></p>
            <% } %>
            
            <form action="/1G7mNkXq9VyF3Hd0RJplzTwB64sSnMEg" method="POST">
                <input type="hidden" name="pay" value="0">
                <button type="submit" class="button-85">Pay 50â‚¹</button>
            </form>
        </div>
    </div>
</div>